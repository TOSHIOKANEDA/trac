<div data-<%= stimulus_controller %>-target="portSearchModal" class="port-modal">
  <div class="port-modal-content">
    <span data-action="click-><%= stimulus_controller %>#closePortSearchModal" class="port-modal-close">×</span>

    <!-- Railsから渡す港データ -->
    <%= tag.div '', id: "port-data", data: { ports: @ports.to_json } %>

    <input type="text"
           data-<%= stimulus_controller %>-target="portSearchModalInput"
           data-action="input-><%= stimulus_controller %>#searchPort"
           placeholder="港名を入力..."
           class="port-modal-input">

    <ul data-<%= stimulus_controller %>-target="portSearchResults" class="port-search-results"></ul>
  </div>
</div>
