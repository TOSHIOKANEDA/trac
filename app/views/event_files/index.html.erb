<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "event_files/index" %>
<% end %>
<% content_for :title, "案件ファイル" %>

<%= render partial: "layouts/sidebar" %>
<div class="main-content" data-controller="event-file-index">
  <div class="container">
    <div class="header">
      <h1><i class="fas fa-folder-open"></i> 案件ファイル管理</h1>
      <%= link_to edit_event_path(@event), class: "btn btn-secondary" do %>
        <i class="fas fa-arrow-left"></i> 案件に戻る
      <% end %>
      <div class="header-info">
        <div class="info-item">
          <span class="info-label">MBL NO.</span>
          <span class="info-value"><%= @event.mbl || 'N/A' %></span>
        </div>
        <div class="info-item">
          <span class="info-label">HBL NO.</span>
          <span class="info-value"><%= @event.hbl || 'N/A' %></span>
        </div>
        <div class="info-item">
          <span class="info-label">ステータス</span>
          <span class="info-value"><%#= @event.status || '書類準備中' %></span>
        </div>
      </div>
    </div>

    <div class="content-container">
      <% @sections.each do |section| %>
        <%= render 'file_section', section: section %>
      <% end %>
      <div class="action-bar">
        <div class="action-info">
          <span style="color: #666; font-size: 14px;">
            <i class="fas fa-info-circle"></i>
            全書類: <span data-event-file-index-target="totalUploadedCount"><%= @event_files_count %></span>/<span data-event-file-index-target="totalCount"><%= @event_doc.true_count %></span> アップロード済み
          </span>
        </div>
        <div class="action-buttons">
          <%= link_to event_event_files_path(@event, format: :zip), 
              class: "btn btn-secondary", 
              data: { "turbo-method": :get } do %>
            <i class="fas fa-download"></i>
            全てダウンロード
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
