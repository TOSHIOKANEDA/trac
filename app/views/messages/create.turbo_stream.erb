<%= turbo_stream.replace "new_message" do %>
  <%= form_with(model: [@event, Message.new], id: "new_message", class: "chat-form") do |form| %>
    <%= form.text_field :content, class: "form-input", autocomplete: "off", placeholder: "メッセージを入力..." %>
    <%= form.submit "送信", class: "btn btn-primary" %>
  <% end %>
<% end %>
