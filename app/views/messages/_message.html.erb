<%= turbo_frame_tag dom_id(message) do %>
  <div class="chat-message">
    <div class="chat-meta">
      <strong><%= message.user.email %></strong>
      <span><%= message.created_at.strftime("%Y/%m/%d %H:%M") %></span>
    </div>
    <div class="chat-content">
      <%= message.content %>
    </div>
  </div>
<% end %>
