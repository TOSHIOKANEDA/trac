<script>
document.addEventListener('DOMContentLoaded', function () {
    const toggles = document.querySelectorAll('.accordion-toggle');

    toggles.forEach(toggle => {
        toggle.addEventListener('click', function() {
            const mainRow = this.closest('.main-row');
            const detailsRow = mainRow.nextElementSibling;
            const isActive = detailsRow.classList.contains('active');

            // Close all currently open accordions
            document.querySelectorAll('.main-row.active').forEach(row => {
                if (row !== mainRow) {
                    row.classList.remove('active');
                    row.nextElementSibling.classList.remove('active');
                    row.querySelector('.accordion-toggle').classList.remove('open');
                }
            });

            // Toggle the clicked accordion
            mainRow.classList.toggle('active');
            detailsRow.classList.toggle('active');
            this.classList.toggle('open');
        });
    });
});
</script>

