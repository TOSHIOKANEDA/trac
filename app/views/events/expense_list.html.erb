            background: #f8f9fa;
        }

        .action-link {
            color: #667eea;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 5px;
            background: none;
            border: none;
            cursor: pointer;
            font-size: 14px;
        }

        .action-link:hover {
            color: #5a6fd8;
            text-decoration: underline;
        }
        /* ----- End: Updated Table Styles ----- */

        /* ----- Start: Accordion Specific Styles ----- */
        .accordion-toggle {
            background-color: #e9ecef;
            border: none;
            width: 24px;
            height: 24px;
            border-radius: 50%;
            cursor: pointer;
            color: #555;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .accordion-toggle .fa-chevron-down {
            transition: transform 0.3s ease;
            font-size: 12px;
        }
        
        .accordion-toggle.open {
            background-color: #2196F3;
            color: white;
        }
        
        .accordion-toggle.open .fa-chevron-down {
            transform: rotate(180deg);
        }
        
        .main-row.active {
            background: #eef2ff;
            /* Reference design for selection highlight */
            border-left: 4px solid #667eea;
        }

        .details-row {
            display: none;
        }

        .details-row.active {
            display: table-row;
            background-color: #eef2ff; /* Match active row background */
        }
        
        .details-cell {
            padding: 0 !important;
            border-right: none !important;
        }

        .details-content {
            padding: 20px 30px;
            display: flex;
            gap: 40px;
            border-top: 1px dashed #ccc;
        }
        
        .details-group {
            font-size: 14px;
        }

        .details-group strong {
            display: block;
            color: #555;
            margin-bottom: 5px;
            font-weight: 500;
        }
        
        .details-group span {
            font-weight: 600;
            color: #333;
        }

        .text-income { color: #2e7d32; font-weight: 500; }
        .text-expense { color: #c72c41; font-weight: 500; }
        .text-profit { font-weight: 600; color: #333; }
        .text-profit-margin { font-weight: 600; color: #17a2b8; }
        /* ----- End: Accordion Specific Styles ----- */

        @media (max-width: 768px) {
            body { flex-direction: column; }
            .sidebar { width: 100%; height: auto; position: relative; }
            .main-content { margin-left: 0; }
            .header { flex-direction: column; gap: 15px; text-align: center; }
            .header-actions { flex-wrap: wrap; justify-content: center; }
            .filter-grid { grid-template-columns: 1fr; }
        }
    </style>
</head>
