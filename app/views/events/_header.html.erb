<!-- 進捗表示ボタン -->
<button class="btn btn-secondary" data-action="click->event-new#showMilestone">
  <i class="fas fa-clipboard-list"></i> 進捗表示
</button>

<!-- 操作ドロップダウン -->
<div class="dropdown" data-event-new-target="operationsDropdown">
  <button class="btn btn-secondary dropdown-toggle" data-action="click->event-new#toggleOperations">
    <i class="fas fa-cogs"></i> 操作
  </button>
  <div class="dropdown-content" data-event-new-target="operationsDropdownContent">
    <%= link_to paste_favorites_path(event_id: @event.id), method: :post, class: "dropdown-item" do %>
      <i class="fas fa-plus"></i> お気に入り登録
    <% end %>
    <%= link_to event_event_files_path(@event), class: "dropdown-item" do %>
      <i class="fas fa-edit"></i> 添付ファイル
    <% end %>
    <%= link_to event_event_finbalances_path(event_id: @event.id), class: "dropdown-item" do %>
      <i class="fas fa-calculator"></i>支払い・請求一覧
    <% end %>
    <button type="button" class="dropdown-item">
      <i class="fas fa-ship"></i>
      <span>B/L発行</span>
    </button>
    <button type="button" class="dropdown-item" data-action="click->event-new#addChat">
      <i class="fas fa-plus"></i>
      <span><%= @other_chat.visible? ? "追加したチャット編集" : "チャット追加" %></span>
    </button>
    <button type="button" class="dropdown-item">
      <i class="fas fa-sync-alt"></i>
      <span>MarineTraffic連携</span>
    </button>
    <%= link_to event_path(@event),
                method: :delete,
                data: { confirm: "本当に削除しますか？" },
                class: "dropdown-item text-danger" do %>
      <i class="fas fa-trash-alt"></i> 削除
    <% end %>
  </div>
</div>
