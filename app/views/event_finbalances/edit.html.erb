<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "event_finbalances/new", "data-turbo-track": "reload" %>
<% end %>
<% content_for :title, "支払い・請求編集" %>

<div data-controller="event-finbalance-new" style="width:100%;">
  <%= render partial: "layouts/sidebar" %>
  <div class="main-content">
    <div class="container">
      <%= form_with model: @event_finbalance, url: event_event_finbalance_path(event_id: @event.id, id: @event_finbalance.id), local: true, data: { turbo: false } do |f| %>
        <div class="header">
          <h1><i class="fas fa-calculator"></i> 支払い・請求編集</h1>
          <div class="header-actions">
            <%= link_to event_event_finbalances_path(@event), class: "btn btn-secondary" do %>
              <i class="fas fa-arrow-left"></i> 一覧に戻る
            <% end %>
            <%= link_to event_event_finbalance_path(event_id: @event_finbalance.event_id, id: @event_finbalance.id, format: :pdf),
                        class: "btn btn-secondary",
                        target: "_blank",
                        rel: "noopener noreferrer" do %>
              <i class="fas fa-file-pdf"></i> 請求書PDF
            <% end %>
            <button class="btn btn-success">
              <i class="fas fa-save"></i> 保存
            </button>
          </div>
        </div>
        <%= render 'form', f: f %>
      <% end %>
    </div>
  </div>
</div>
